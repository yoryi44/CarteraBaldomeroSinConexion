<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:gravity="center"
    android:orientation="horizontal"
    android:weightSum="9">

    <TextView
        android:id="@+id/tvNumeroDocumentoCartera"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:gravity="center"
        android:text="No. Docoumento"
        android:textColor="@color/colorBotonNegro" />

    <TextView
        android:id="@+id/tvConceptCartera"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:layout_marginLeft="8dp"
        android:gravity="center"
        android:text="Tipo"
        android:textColor="@color/colorBotonNegro" />

    <TextView
        android:id="@+id/simboloformas1"
        android:layout_width="18dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/foco_std_rg"
        android:lines="1"
        android:maxLength="4"
        android:layout_marginLeft="12dp"
        android:textColor="@android:color/black"
        android:text=""
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/tvSaldoCartera"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:layout_marginRight="15dp"
        android:gravity="left"
        android:text="Saldo"
        android:textColor="@color/colorBotonNegro" />


</LinearLayout>