<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="co.com.celuweb.carterabaldomero.FacturasSeleccionadasPendientesActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:layout_marginTop="30sp"
        android:gravity="center"
        android:orientation="horizontal">

        <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp">

            <TableRow
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="#51B435">

                <TextView
                    android:id="@+id/txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#51B435"
                    android:text="Num Recibo"
                    android:textSize="13dp">
                    android:textStyle="bold">

                </TextView>

                <TextView
                    android:id="@+id/txt1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:background="#51B435"
                    android:text="Nom Comercial"
                    android:textSize="13dp">
                    android:textStyle="bold">

                </TextView>

                <TextView
                    android:id="@+id/txt2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="45dp"
                    android:background="#51B435"
                    android:text="Cancelado"
                    android:textSize="13dp">
                    android:textStyle="bold">

                </TextView>

                <TextView
                    android:id="@+id/txt4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:background="#51B435"
                    android:text="Meto. Pago"
                    android:textSize="13dp">
                    android:textStyle="bold">

                </TextView>


            </TableRow>


        </TableLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="288dp"
        android:layout_marginTop="0sp"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="288dp"
            android:layout_marginTop="0sp"

            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:layout_weight="100"
                android:orientation="vertical">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvListaCarteraFacturasSelecPendientesMultiple"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:layout_marginTop="0dp" />


            </FrameLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="30sp"
        android:gravity="center"
        android:orientation="horizontal">

        <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:paddingLeft="55dp"
            android:paddingRight="55dp">

            <TableRow
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="#51B435">

                <TextView
                    android:id="@+id/txtinfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#51B435"
                    android:text="Resumen"
                    android:textSize="15dp">
                    android:textStyle="bold">

                </TextView>


                <TextView
                    android:id="@+id/txt2info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="49dp"
                    android:background="#51B435"
                    android:text="Valor"
                    android:textSize="15dp">
                    android:textStyle="bold">

                </TextView>

                <TextView
                    android:id="@+id/txt4info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="35dp"
                    android:background="#51B435"
                    android:text="Cantidad"
                    android:textSize="15dp">
                    android:textStyle="bold">

                </TextView>


            </TableRow>

        </TableLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="188dp"
        android:layout_marginTop="0sp"
        android:orientation="horizontal">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="188dp"
            android:layout_marginTop="0sp"
            android:orientation="horizontal">

            <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:paddingLeft="55dp"
                android:paddingRight="55dp">

                <TableRow
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="5dp">

                    <TextView
                        android:id="@+id/txtEfec"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total Efectivo"
                        android:textSize="15dp"
                        android:textStyle="bold">

                    </TextView>


                    <TextView
                        android:id="@+id/txtValorEfectivo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:text="Valor"
                        android:textSize="15dp">


                    </TextView>

                    <TextView
                        android:id="@+id/txtCantidadEfec"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="35dp"
                        android:text="Cantidad"
                        android:textSize="15dp">
                        android:textStyle="bold">

                    </TextView>


                </TableRow>

                <TableRow
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="5dp">

                    <TextView
                        android:id="@+id/txtCheq"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total Cheques"
                        android:textSize="15dp"
                        android:textStyle="bold">

                    </TextView>


                    <TextView
                        android:id="@+id/txtValorCheques"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:text="Valor"
                        android:textSize="15dp">


                    </TextView>

                    <TextView
                        android:id="@+id/txtCantidadCheques"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="35dp"
                        android:text="Cantidad"
                        android:textSize="15dp">
                        android:textStyle="bold">

                    </TextView>


                </TableRow>

                <TableRow
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total Entregado"
                        android:textSize="15dp"
                        android:textStyle="bold">

                    </TextView>


                    <TextView
                        android:id="@+id/txtValorEntregado"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:text="Valor"
                        android:textSize="15dp">


                    </TextView>

                    <TextView
                        android:id="@+id/txtCantidadEntregada"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="35dp"
                        android:text="Cantidad"
                        android:textSize="15dp">
                        android:textStyle="bold">

                    </TextView>


                </TableRow>

            </TableLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>



</LinearLayout>