<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="co.com.celuweb.carterabaldomero.VistaClienteActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/blanco"
        tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- BLOQUE INFORMACION 1 -->
            <LinearLayout
                android:id="@+id/vistacliente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorBloqueUno"
                android:baselineAligned="false"
                android:orientation="horizontal"
                android:weightSum="10">

                <LinearLayout
                    android:layout_width="347dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10sp"
                    android:layout_weight="8"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvTituloCodigoSapClienteSel"
                            android:layout_width="95sp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/foco_std_rg"
                            android:text="@string/codigo_sap"
                            android:textColor="@android:color/white"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/tvCodigoSapClienteSel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/foco_std"
                            android:singleLine="true"
                            android:text=""
                            android:textColor="@android:color/white"
                            android:textSize="13sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5sp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvTituloNombreClienteSel"
                            android:layout_width="95sp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/foco_std_rg"
                            android:text="@string/nombre"
                            android:textColor="@android:color/white"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/tvNombreClienteSel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/foco_std"
                            android:singleLine="true"
                            android:text=""
                            android:textColor="@android:color/white"
                            android:textSize="13sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5sp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvTituloRazonSocialClienteSel"
                            android:layout_width="95sp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/foco_std_rg"
                            android:text="@string/razon_social"
                            android:textColor="@android:color/white"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/tvRazonSocialClienteSel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/foco_std"
                            android:singleLine="true"
                            android:text=""
                            android:textColor="@android:color/white"
                            android:textSize="13sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5sp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvTituloNitClienteSel"
                            android:layout_width="95sp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/foco_std_rg"
                            android:text="@string/nit"
                            android:textColor="@android:color/white"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/tvNITClienteSel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/foco_std"
                            android:singleLine="true"
                            android:text=""
                            android:textColor="@android:color/white"
                            android:textSize="13sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5sp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvTituloDireccionClienteSel"
                            android:layout_width="95sp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/foco_std_rg"
                            android:text="Email"
                            android:textColor="@android:color/white"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/tvDireccionClienteSel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/foco_std"
                            android:singleLine="true"
                            android:text=""
                            android:textColor="@android:color/white"
                            android:textSize="13sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5sp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvTituloTelefonoClienteSel"
                            android:layout_width="95sp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/foco_std_rg"
                            android:text="Contacto"
                            android:textColor="@android:color/white"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/tvTelefonoClienteSel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/foco_std"
                            android:singleLine="true"
                            android:text=""
                            android:textColor="@android:color/white"
                            android:textSize="13sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5sp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvTituloSegmentoClienteSel"
                            android:layout_width="95sp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/foco_std_rg"
                            android:text="Vendedor"
                            android:textColor="@android:color/white"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/tvSegmentoClienteSel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/foco_std"
                            android:singleLine="true"
                            android:text=""
                            android:textColor="@android:color/white"
                            android:textSize="13sp" />

                    </LinearLayout>

                </LinearLayout>



            </LinearLayout>

            <LinearLayout
                android:id="@+id/expandibleVistaC2"
                android:layout_width="match_parent"
                android:layout_height="95dp"
                android:background="@color/colorBloqueDos"
                android:baselineAligned="false"
                android:orientation="horizontal"
                android:weightSum="10">

                <LinearLayout
                    android:layout_width="347dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10sp"
                    android:layout_marginTop="10sp"
                    android:layout_marginRight="10sp"
                    android:layout_marginBottom="2sp"
                    android:layout_weight="8"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvTituloCupoCreditoClienteSel"
                            android:layout_width="110dp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/foco_std_rg"
                            android:text="@string/cupo_de_credito"
                            android:textColor="@android:color/black"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/tvCupoCreditoClienteSel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/foco_std"
                            android:singleLine="true"
                            android:text=""
                            android:textColor="@android:color/black"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5sp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvTituloCondicionPagoClienteSel"
                            android:layout_width="110dp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/foco_std_rg"
                            android:text="@string/condicion_de_pago"
                            android:textColor="@android:color/black"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/tvCondicionPagoClienteSel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/foco_std"
                            android:singleLine="true"
                            android:text=""
                            android:textColor="@android:color/black"
                            android:textSize="10sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5sp">

                        <TextView
                            android:id="@+id/tvTituloCarteraVencidaClienteSel"
                            android:layout_width="110dp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/foco_std_rg"
                            android:text="@string/cartera_vencida"
                            android:textColor="@android:color/black"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/tvCarteraVencidaClienteSel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/foco_std"
                            android:singleLine="true"
                            android:text=""
                            android:textColor="@android:color/black"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5sp">

                        <TextView
                            android:id="@+id/tvTituloCarteraVencidaClienteSelPor"
                            android:layout_width="110dp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/foco_std_rg"
                            android:text="@string/cartera_vencida_porcentaje"
                            android:textColor="@android:color/black"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/tvCarteraVencidaClienteSelPorcentaje"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/foco_std"
                            android:singleLine="true"
                            android:textColor="@android:color/black"
                            android:textSize="12sp" />

                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>

            <!-- BLOQUE BOTONERA -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:background="@color/blanco"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:layout_marginBottom="5sp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="100sp"
                        android:layout_height="120sp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <androidx.cardview.widget.CardView
                            android:layout_width="80sp"
                            android:layout_height="80sp"
                            app:cardBackgroundColor="@color/colorDoradoIconos"
                            app:cardCornerRadius="50sp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:contentDescription="@string/ugc"
                                android:onClick="onClickReciboDinero"
                                android:padding="20sp"
                                android:src="@mipmap/iconougc" />

                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:id="@+id/titulobotonReciboDinero"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6sp"
                            android:fontFamily="@font/foco_std"
                            android:gravity="center"
                            android:text="Recibo de Dinero"
                            android:textColor="@color/colorPrimary"
                            android:textSize="15sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="100sp"
                        android:layout_height="120sp"
                        android:layout_marginLeft="20sp"
                        android:layout_marginRight="20sp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <androidx.cardview.widget.CardView
                            android:layout_width="80sp"
                            android:layout_height="80sp"
                            app:cardBackgroundColor="@color/colorDoradoIconos"
                            app:cardCornerRadius="50sp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:padding="20sp"
                                android:src="@mipmap/iconovic" />

                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:id="@+id/titulobotonSolicitudNotaCredito"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6sp"
                            android:fontFamily="@font/foco_std"
                            android:gravity="center"
                            android:text="Solicitud nota de credito"
                            android:textColor="@color/colorPrimary"
                            android:textSize="15sp"/>

                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <androidx.cardview.widget.CardView
                        android:layout_width="80sp"
                        android:layout_height="80sp"
                        android:onClick="onClickBloquearCliente"
                        app:cardBackgroundColor="@color/colorBotonRojo"
                        app:cardCornerRadius="50sp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:contentDescription="@string/bloquear_cliente"
                            android:padding="20sp"
                            android:src="@drawable/ic_candado" />

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6sp"
                        android:fontFamily="@font/foco_std"
                        android:gravity="center"
                        android:text="@string/bloquear_cliente"
                        android:textColor="@color/colorPrimary"
                        android:textSize="15sp" />


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1sp"
                android:background="@color/blanco"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:layout_marginBottom="5sp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="100sp"
                        android:layout_height="120sp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <androidx.cardview.widget.CardView
                            android:layout_width="80sp"
                            android:layout_height="80sp"
                            app:cardBackgroundColor="@color/colorDoradoIconos"
                            app:cardCornerRadius="50sp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:contentDescription="@string/encuestas"
                                android:padding="20sp"
                                android:src="@mipmap/iconoencuestas" />

                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:id="@+id/titulobotonSolicitudCredito"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6sp"
                            android:fontFamily="@font/foco_std"
                            android:gravity="center"
                            android:text="Solicitud de credito"
                            android:textColor="@color/colorPrimary"
                            android:textSize="15sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="100sp"
                        android:layout_height="120sp"
                        android:layout_marginLeft="20sp"
                        android:layout_marginRight="20sp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <androidx.cardview.widget.CardView
                            android:layout_width="80sp"
                            android:layout_height="80sp"
                            app:cardBackgroundColor="@color/colorDoradoIconos"
                            app:cardCornerRadius="50sp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:contentDescription="@string/encuestas"
                                android:padding="20sp"
                                android:src="@mipmap/iconoencuestas" />

                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:id="@+id/titulobotonBloqueoClientes"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6sp"
                            android:fontFamily="@font/foco_std"
                            android:gravity="center"
                            android:text="Bloqueo de clientes"
                            android:textColor="@color/colorPrimary"
                            android:textSize="15sp" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <androidx.cardview.widget.CardView
                        android:layout_width="80sp"
                        android:layout_height="80sp"
                        android:onClick="onClickBloquearCliente"
                        app:cardBackgroundColor="@color/colorBotonRojo"
                        app:cardCornerRadius="50sp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:contentDescription="@string/bloquear_cliente"
                            android:padding="20sp"
                            android:src="@drawable/ic_candado" />

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6sp"
                        android:fontFamily="@font/foco_std"
                        android:gravity="center"
                        android:text="@string/bloquear_cliente"
                        android:textColor="@color/colorPrimary"
                        android:textSize="15sp" />


                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1sp"
                android:background="@color/blanco"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:layout_marginBottom="5sp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="100sp"
                        android:layout_height="120sp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <androidx.cardview.widget.CardView
                            android:layout_width="80sp"
                            android:layout_height="80sp"
                            app:cardBackgroundColor="@color/colorDoradoIconos"
                            app:cardCornerRadius="50sp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:onClick="onClickAnuladosVistaCliente"
                                android:contentDescription="@string/encuestas"
                                android:padding="20sp"
                                android:src="@mipmap/iconoencuestas" />

                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:id="@+id/titulobotonRecibosAnulados"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6sp"
                            android:fontFamily="@font/foco_std"
                            android:gravity="center"
                            android:onClick="onClickAnuladosVistaCliente"
                            android:text="Recibos Anulados"
                            android:textColor="@color/colorPrimary"
                            android:textSize="15sp" />

                    </LinearLayout>



                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <androidx.cardview.widget.CardView
                        android:layout_width="80sp"
                        android:layout_height="80sp"
                        android:onClick="onClickBloquearCliente"
                        app:cardBackgroundColor="@color/colorBotonRojo"
                        app:cardCornerRadius="50sp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:contentDescription="@string/bloquear_cliente"
                            android:padding="20sp"
                            android:src="@drawable/ic_candado" />

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6sp"
                        android:fontFamily="@font/foco_std"
                        android:gravity="center"
                        android:text="@string/bloquear_cliente"
                        android:textColor="@color/colorPrimary"
                        android:textSize="15sp" />


                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>