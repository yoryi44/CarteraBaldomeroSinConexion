<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:gravity="center"
    android:orientation="horizontal"
    android:weightSum="9">

    <TextView
        android:id="@+id/tvNumeroReciboPendientes"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:gravity="left"
        android:text="No. Recibo"
        android:textSize="11dp"
        android:textColor="@color/colorBotonNegro" />

    <TextView
        android:id="@+id/tvNombreComercialPendientes"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:gravity="left"
        android:layout_marginLeft="10dp"
        android:textSize="11dp"
        android:text=""
        android:textColor="@color/colorBotonNegro" />


    <TextView
        android:id="@+id/tvTotalCanceladoPendientes"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="0dp"
        android:layout_marginLeft="10dp"
        android:layout_weight="3"
        android:textSize="11dp"
        android:text="Cancelado"
        android:textColor="@color/colorBotonNegro" />

    <TextView
        android:id="@+id/tvMetodoPagoPendientes"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="3dp"
        android:textSize="11dp"
        android:text="Meto. Pago"
        android:textColor="@color/colorBotonNegro" />


</LinearLayout>