<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="co.com.celuweb.carterabaldomero.PrincipalActivity">



    <!-- COMPONENTE INFORMACION USUARIO -->
    <LinearLayout
        android:id="@+id/imageusu"

        android:layout_width="match_parent"
        android:layout_height="98dp"
        android:background="@mipmap/imageninformes"
        android:orientation="horizontal"
        android:weightSum="10">


        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="visible">

            <TextView
                android:id="@+id/tvFechaUltimaSincronizacionUsuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp"
                android:fontFamily="@font/foco_std"
                android:gravity="center"
                android:text="-/-/-"
                android:textColor="@color/blanco"
                android:textSize="14sp"></TextView>

            <TextView
                android:id="@+id/tvNombreUsuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/foco_std"
                android:gravity="center"
                android:textColor="@color/blanco"
                android:textSize="18sp"></TextView>

            <TextView
                android:id="@+id/tvVersionApp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp"
                android:fontFamily="@font/foco_std"
                android:gravity="center"
                android:text="Versión 1.0.5"
                android:textColor="@color/blanco"
                android:textSize="14sp"></TextView>

        </LinearLayout>



    </LinearLayout>

    <!-- BOTONES DE LA APP -->
    <LinearLayout
        android:background="@color/cardview_dark_background"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="2"
        android:orientation="vertical">

        <FrameLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:src="@mipmap/imageninformes"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"/>

            <LinearLayout
                android:id="@+id/colorbanner"
                android:background="@color/agco"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="bottom">

                <LinearLayout
                    android:background="@mipmap/fondobotonesprincipal"
                    android:layout_width="match_parent"
                    android:layout_height="110sp"
                    android:gravity="center"
                    android:weightSum="10"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"/>

                    <LinearLayout
                        android:layout_weight="8"
                        android:orientation="vertical"
                        android:gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/GestionCartera"
                            android:gravity="center"
                            android:layout_marginTop="10sp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/blanco"
                            android:fontFamily="@font/foco_std"
                            android:textSize="32sp"
                            android:text="Gestión de Cartera"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/llBotonGestionCartera"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent">

            </LinearLayout>

        </FrameLayout>

        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/agco"
            />

        <FrameLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:src="@mipmap/imagengestioncartera"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"/>

            <LinearLayout
                android:id="@+id/llBotonInformes"

                android:background="@color/agco"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="bottom">

                <LinearLayout
                    android:background="@mipmap/fondobotonesprincipal"
                    android:layout_width="match_parent"
                    android:layout_height="110sp"
                    android:gravity="center"
                    android:weightSum="10"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"/>

                    <LinearLayout
                        android:layout_weight="8"
                        android:orientation="vertical"
                        android:gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/InformesPrincipal"
                            android:gravity="center"
                            android:layout_marginTop="10sp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/blanco"
                            android:fontFamily="@font/foco_std"
                            android:textSize="32sp"
                            android:text="Informes"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"/>

                </LinearLayout>

            </LinearLayout>



        </FrameLayout>
        
    </LinearLayout>

</LinearLayout>