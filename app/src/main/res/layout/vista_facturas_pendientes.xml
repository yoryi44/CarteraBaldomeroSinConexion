<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scroll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:padding="16dp">



        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:context="co.com.celuweb.carterabaldomero.FacturasSeleccionadasActivity">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:gravity="left"
                android:orientation="horizontal">

                <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">



                    <TableRow

                        android:layout_marginRight="5dp"
                        android:background="@drawable/cell_shape">

                        <CheckBox
                            android:id="@+id/cbCarteraFacturaPendientes"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="0dp"

                            android:buttonTint="@color/colorPrimaryDark" />


                        <TextView
                            android:id="@+id/txtNumeroRecibo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:gravity="center"
                            android:layout_marginStart="-1dp"
                            android:text="No. de Recibo"
                            android:textSize="15dp"
                            android:textStyle="bold">


                        </TextView>

                        <TextView
                            android:id="@+id/txtCodigoCliente"
                            android:layout_width="450dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="30dp"
                            android:text="Codigo Cliente"
                            android:textSize="15dp"
                            android:textStyle="bold">

                        </TextView>

                        <TextView
                            android:id="@+id/txtFechaCreacion"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Fecha Creacion"
                            android:textSize="15dp"
                            android:textStyle="bold">

                        </TextView>

                        <TextView
                            android:id="@+id/txtFechaCierre"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="40dp"
                            android:text="Fecha Cierre"
                            android:textSize="15dp"
                            android:textStyle="bold">

                        </TextView>

                        <TextView
                            android:id="@+id/txtMontoPendientes"
                            android:layout_width="160dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="30dp"
                            android:text="Monto"
                            android:textAlignment="center"
                            android:textSize="15dp"
                            android:textStyle="bold">

                        </TextView>

                        <TextView
                            android:id="@+id/txtStatus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="60dp"
                            android:text="Status"
                            android:textSize="15dp"
                            android:textStyle="bold">

                        </TextView>

                        <Button
                            android:id="@+id/btnSeleccionPendientes"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginStart="50dp"
                            android:background="@drawable/ic_botonejecucion"
                            android:textStyle="bold">
                            // android:onClick=""
                        </Button>

                        <Button
                            android:visibility="gone"
                            android:id="@+id/btnImprimir"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_marginStart="100dp"
                            android:background="@drawable/imprimir_prueba_1"
                            android:textStyle="bold">
                            // android:onClick=""
                        </Button>

                        <Button
                            android:id="@+id/btnAnuladosPendientes"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginStart="80dp"
                            android:background="@drawable/rechazar"
                            android:textStyle="bold">
                            // android:onClick=""
                        </Button>

                        <Spinner
                            android:id="@+id/spinnerMotivosAnulacion"
                            android:layout_width="145dp"
                            android:layout_marginLeft="10dp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/foco_std_rg"/>

                    </TableRow>


                </TableLayout>


            </LinearLayout>




        </LinearLayout>




    </androidx.constraintlayout.widget.ConstraintLayout>

</HorizontalScrollView>

