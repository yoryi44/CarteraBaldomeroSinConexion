<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
tools:context="co.com.celuweb.carterabaldomero.InformesActivity">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="350dp">

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="330dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@mipmap/imagengestioncartera" />

        <LinearLayout
            android:id="@+id/llBotonInformes"
            android:layout_width="match_parent"
            android:layout_height="330dp"
            android:background="@color/agco"
            android:gravity="bottom"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="110sp"
                android:background="@mipmap/fondobotonesprincipal"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="10">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="8"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tituloInformes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10sp"
                        android:fontFamily="@font/foco_std"
                        android:gravity="center"
                        android:text="Informes"
                        android:textColor="@color/blanco"
                        android:textSize="32sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

            </LinearLayout>

        </LinearLayout>


    </FrameLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blanco"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5sp"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="100sp"
                android:layout_height="120sp"
                android:gravity="center"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="80sp"
                    android:layout_height="80sp"
                    app:cardBackgroundColor="@color/colorDoradoIconos"
                    app:cardCornerRadius="50sp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:contentDescription="@string/ugc"
                        android:padding="20sp"
                        android:onClick="onClickRealizados"
                        android:src="@mipmap/iconougc" />

                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/tituloRecibosRealizadosInformes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6sp"
                    android:fontFamily="@font/foco_std"
                    android:gravity="center"
                    android:onClick="onClickRealizados"
                    android:text="Recibo Realizados"
                    android:textColor="@color/colorPrimary"
                    android:textSize="15sp" />

            </LinearLayout>




        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:visibility="gone">

            <androidx.cardview.widget.CardView
                android:layout_width="80sp"
                android:layout_height="80sp"
                app:cardBackgroundColor="@color/colorBotonRojo"
                app:cardCornerRadius="50sp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/bloquear_cliente"
                    android:padding="20sp"
                    android:src="@drawable/ic_candado" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6sp"
                android:fontFamily="@font/foco_std"
                android:gravity="center"
                android:text="@string/bloquear_cliente"
                android:textColor="@color/colorPrimary"
                android:textSize="15sp" />


        </LinearLayout>

    </LinearLayout>




</LinearLayout>