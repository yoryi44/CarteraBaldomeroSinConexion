<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:launchMode="singleInstance"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="540dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="2dp"
        android:layout_marginRight="5dp"
        android:background="@android:color/transparent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:id="@+id/txtCompaReciboDinero"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/foco_std_rg"
                    android:singleLine="true"
                    android:text="Registrar Forma de Pago"
                    android:textColor="@android:color/black"
                    android:textSize="26sp" />


            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:gravity="center">

                <TextView
                    android:id="@+id/txtCompaReciboDinero1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/foco_std_rg"
                    android:singleLine="true"
                    android:text="Bitcoin"
                    android:textColor="@android:color/black"
                    android:textSize="26sp"
                    android:gravity="center"/>


            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="3"
                android:gravity="center">

                <TextView
                    android:id="@+id/txtCompaReciboDinero2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/foco_std_rg"
                    android:singleLine="true"
                    android:layout_marginTop="10dp"
                    android:text="Monto a Recaudar: "
                    android:textColor="@android:color/black"
                    android:textSize="18sp" />


                <TextView
                    android:id="@+id/tvMonto"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/foco_std_rg"
                    android:layout_marginTop="10dp"
                    android:text=""
                    android:textColor="@android:color/black"
                    android:textSize="16sp" />

            </LinearLayout>


        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="310dp"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:layout_marginBottom="10sp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="280dp"
                android:layout_margin="10sp"
                android:orientation="horizontal"
                android:weightSum="100">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="280dp"
                    android:layout_weight="87"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="280dp"
                        android:layout_margin="10sp"
                        android:orientation="vertical"
                        android:weightSum="100">

                        <!-- CONTENIDO PRINCIPAL -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="280dp"
                            android:orientation="horizontal">

                            <!-- ICONO DE MARCA DE LA FACTURA PROGRAMADA -->

                            <!-- INFORMACION GENERAL DE LA FACTURA PROGRAMADA -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="290dp"
                                android:weightSum="10">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="6"
                                    android:orientation="vertical">


                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="5sp"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:id="@+id/tituloFechaBitcoin"
                                            android:layout_width="128dp"
                                            android:layout_height="wrap_content"
                                            android:fontFamily="@font/foco_std"
                                            android:text="Fecha:"
                                            android:textColor="@android:color/black"
                                            android:textSize="16sp" />

                                        <EditText
                                            android:id="@+id/tvFechaFragEfec"
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="3"
                                            android:hint="yyyy-mm-dd"
                                            android:textAlignment="center"
                                            android:background="@drawable/cuadro_texto"
                                            android:textColor="@color/normalColor"
                                            android:textSize="16sp"
                                            android:inputType="date"
                                            android:focusable="false"
                                            android:clickable="true"
                                            android:drawableRight="@drawable/ic_calendario"
                                            android:layout_marginRight="1dp"
                                            android:textStyle="bold">

                                        </EditText>

                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:id="@+id/tituloMontoBitcoin"
                                            android:layout_width="128dp"
                                            android:layout_height="wrap_content"
                                            android:fontFamily="@font/foco_std"
                                            android:text="Monto:"
                                            android:textColor="@android:color/black"
                                            android:textSize="16sp" />

                                        <TextView
                                            android:id="@+id/simboloBitcoin"
                                            android:layout_width="22dp"
                                            android:layout_height="wrap_content"
                                            android:fontFamily="@font/foco_std_rg"
                                            android:lines="1"
                                            android:maxLength="4"
                                            android:textColor="@android:color/black"
                                            android:text=""
                                            android:textSize="16sp"/>


                                        <EditText
                                            android:id="@+id/tvoMontoBitcoin"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:fontFamily="@font/foco_std_rg"
                                            android:text=""
                                            android:maxLength="14"
                                            android:singleLine="true"
                                            android:textColor="@android:color/black"
                                            android:textSize="16sp"
                                            tools:ignore="LabelFor"
                                            android:digits="0123456789"
                                            android:inputType="numberDecimal"/>

                                    </LinearLayout>


                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">

                                        <Spinner
                                            android:id="@+id/spinnerEstatus"
                                            android:layout_width="235dp"
                                            android:layout_height="wrap_content"
                                            android:layout_marginRight="150sp"
                                            android:entries="@array/ESTATUS"
                                            android:visibility="invisible" />

                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:id="@+id/tituloCuentaOrigenBitcoin"
                                            android:layout_width="128dp"
                                            android:layout_height="wrap_content"
                                            android:fontFamily="@font/foco_std"
                                            android:text="Cuenta Origen:"
                                            android:textColor="@android:color/black"
                                            android:textSize="16sp" />

                                        <EditText
                                            android:id="@+id/tvCuentaOrigenBitcoin"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:fontFamily="@font/foco_std_rg"
                                            android:text=""
                                            android:textColor="@android:color/black"
                                            android:textSize="16sp"
                                            android:singleLine="true"
                                            android:digits="abcdefghijklmnñopqrstuvwxyz1234567890"
                                            android:inputType="numberDecimal"/>

                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:id="@+id/tituloCuentaDestinoBitcoin"
                                            android:layout_width="127dp"
                                            android:layout_height="wrap_content"
                                            android:fontFamily="@font/foco_std"
                                            android:text="Cuenta Destino:"
                                            android:textColor="@android:color/black"
                                            android:textSize="16sp" />

                                        <Spinner
                                            android:id="@+id/spinnerCuentasBancoBitcoin"
                                            android:layout_width="179dp"
                                            android:layout_height="wrap_content"
                                            android:fontFamily="@font/foco_std_rg" />




                                    </LinearLayout>

                                </LinearLayout>


                            </LinearLayout>

                        </LinearLayout>

                        <!-- PRECIO FACTURA -->


                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="113dp"
            android:layout_marginTop="0sp"
            android:layout_marginBottom="15sp"
            android:gravity="center"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15sp"
                android:gravity="center"
                android:orientation="horizontal">


                <Button
                    android:id="@+id/tomarFoto"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="20sp"
                    android:background="@drawable/fotografia"
                    android:fontFamily="@font/foco_std" />

                <ImageView
                    android:id="@+id/guardarFormaPagoFE"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="20sp"
                    android:background="@drawable/ic_add"
                    android:fontFamily="@font/foco_std"
                    />


                <ImageView
                    android:id="@+id/cancelarFormaPagoFE"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="20sp"
                    android:background="@drawable/ic_close"
                    android:fontFamily="@font/foco_std" />


            </LinearLayout>




        </LinearLayout>


    </LinearLayout>


</LinearLayout>
